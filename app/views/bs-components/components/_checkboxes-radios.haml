        .form-check.form-check-inline.sa-radio-buttons
          %input#inlineRadio2-2.form-check-input{:name => "inlineRadioOptions", :type => "radio", :value => "option2"}/
          %label.form-check-label.radio-button{:for => "inlineRadio2-2"} 2
        .form-check.form-check-inline.sa-radio-buttons
